<h3>Countdown Signs</h3>
<div class="container signs-container">
  <div class="row signs-headers">
    <div class="col-md-1 col-xs-2">
      <b>Status</b>
    </div>
    <div class="col-md-11 col-xs-10">
      <b>Station</b>
    </div>
  </div>
  <%= form_for @conn, signs_path(@conn, :update), [as: :signs, class: "signs-form"], fn f -> %>
    <%= for {sign_id, sign} <- @signs do %>
      <div class="col-md-1 col-xs-2">
        <%= checkbox(f, sign_id, value: sign.enabled?, id: sign_id, class: "pull-right") %>
      </div>
      <div class="col-md-11 col-xs-10">
        <%= content_tag :label, sign_id,
        for: sign_id,
        class: if !sign.enabled?, do: "text-muted" %>
      </div>
    <% end %>
    <%= submit "Submit", class: "btn btn-primary" %>
  <% end %>
</div>

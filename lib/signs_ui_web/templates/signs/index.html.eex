<h3>Countdown Signs</h3>
<div>
  <%= form_for @conn, signs_path(@conn, :update), [as: :signs], fn f -> %>
    <%= for {sign_id, sign} <- @signs do %>
      <div>
        <label><%= sign_id %></label>
        <%= checkbox(f, sign_id, value: sign.enabled?) %>
      </div>
    <% end %>
    <%= submit "Submit" %>
  <% end %>
</div>
